# We have this here to help center our buttons
# also comes in handy for debugging
<CStackLayout@StackLayout+TabBackgroundColor>
<TabBackgroundColor@Widget>
	pos_hint: {'center_x': .5, 'center_y': .5}
	size_hint: .9, .9
	canvas.before:
		Color:
			rgba: .2, .3, .4, 0
		Rectangle:
			size: self.size
			pos: self.pos

GuitarScreen:
	name: 'TabLibrary'
	fullscreen: True
	# layout is used to pass the correct layout to the 
	# tab population function
	layout: tab_page
	
	Label:
		text: "Pick A Tab To Play"
		size_hint_y: None
		height: '12dp'
	
	
	# We place our tabs in a stack layout
	# Tabs should be limited to 25
	ListView:
		CStackLayout:
			id: tab_page
			orientation: "lr-tb"