GuitarScreen:
    # Name of the screen
	name: "Scoreboard"
	
	# fullscreen helps with getting the contents formatted correctly
	fullscreen: True
	
	ActionBar:
		background_color: 0, 0, 0 ,0
		ActionView:
			ActionPrevious:
				app_icon: 'data/icons/home.png'
				on_release: app.go_screen(app.tabLibraryIdx)
	Label:
		size_hint_y: None
		height: '48dp'
		text: 'Well done!'

	Label:
		size_hint_y: None
		height: '48dp'
		text: 'Here\'s your latest score!'

	Label:
		id: LastScore
		size_hint_y: None
		height: '48dp'
		text: app.getLastScore()

	Label:
		size_hint_y: None
		height: '48dp'
		text: 'Top 5 Scores'

	Label:
		id: Score1
		size_hint_y: None
		height: '48dp'
		text: '1. ' + app.get5Scores()[0]
	
	Label:
		id: Score2
		size_hint_y: None
		height: '48dp'
		text: '2. ' + app.get5Scores()[1]
	
	Label:
		id: Score3
		size_hint_y: None
		height: '48dp'
		text: '3. ' + app.get5Scores()[2]
	
	Label:
		id: Score4
		size_hint_y: None
		height: '48dp'
		text: '4. ' + app.get5Scores()[3]
	
	Label:
		id: Score5
		size_hint_y: None
		height: '48dp'
		text: '5. ' + app.get5Scores()[4]

	