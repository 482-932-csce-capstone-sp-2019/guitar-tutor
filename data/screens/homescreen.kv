GuitarScreen:
    # screen name
	name: 'HomeScreen'
	
	# title
	Label:
		text: "Choose Your Option"
		size_hint_y: None
		height: '12dp'
	
	# buttons leadign to other screens
	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Chord Library'
		on_release: app.go_screen(1)

	# When going to the tabs library, we must call load_tabs to populate the page
	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Tab Library'
		on_release: app.go_screen(2), app.load_tabs(app.screens[2].layout)

	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Add a Personal Tab'
		on_release: app.go_screen(3)

	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Simon Says Challenge'
		on_release: app.go_screen(4)

	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Tuner'
		on_release: app.go_screen(5)