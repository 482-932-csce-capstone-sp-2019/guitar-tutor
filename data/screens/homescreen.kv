GuitarScreen:
    # screen name
	name: 'HomeScreen'
	
	# title
	Label:
		text: "Choose Your Option"
		size_hint_y: None
		height: '12dp'
	
	# buttons leadign to other screens
	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Chord Library'
		on_release: app.go_screen(app.chordLibraryIdx)

	# When going to the tabs library, we must call load_tabs to populate the page
	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Tab Library'
		on_release: app.go_screen(app.tabLibraryIdx), app.load_tabs(app.screens[2].layout)

	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Add a Personal Tab'
		on_release: app.go_screen(app.addTabIdx), root.show_load()

	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Chord Practice'
		on_release: app.go_screen(app.challengeIdx), app.play_tab_chord_practice()
		
	Button:
		size_hint_y: None
		height: '48dp'
		text: 'Tuner'
		on_release: app.go_screen(app.tunerIdx), app.do_tuning(), app.start_tuner()
