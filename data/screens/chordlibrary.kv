# This part is for centering the chords by 'sticking' it to a template
<ChStackLayout@StackLayout+ChordBackgroundColor>
<ChordBackgroundColor@Widget>
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: .6, .6
    canvas.before:
        Color:
            rgba: .2, .3, .4, 0
        Rectangle:
            size: self.size
            pos: self.pos


GuitarScreen:
	# Name of the screen
	name: "ChordLibrary"
	
	# fullscreen helps with getting the contents formatted correctly
	fullscreen: True
	
	ActionBar:
		background_color: 0, 0, 0 ,0
		ActionView:
			ActionPrevious:
				app_icon: 'data/icons/home.png'
				on_release: app.go_screen(0)
	
	# Title
	Label:
		text: "Pick A Chord to Learn"
		size_hint: .2, .2
		height: '12dp'
	
	# We put our grid of chords in a floatlayout so that we can center it
	FloatLayout:
