GuitarScreen:
	name: 'AddTab'
	fullscreen: True
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel(), app.go_screen(app.homeScreenIdx)

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection), app.go_screen(0)

<MyPopup@Popup>:
    auto_dismiss: False
    Button:
        text: 'Success!'
        on_release: root.dismiss()

